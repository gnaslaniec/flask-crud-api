# Core application settings
FLASK_ENV=development
APP_ENV=development
SECRET_KEY=change-me-please
JWT_SECRET_KEY=change-me-too

# Database configuration (SQLite default shown)
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/project_management
FLASK_APP_DB=project_management.db

# Authentication & tokens
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_ALGORITHM=HS256

# Default admin bootstrap user (used by `flask init-admin`)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!
DEFAULT_ADMIN_NAME=Administrator

# Password policy (regex must remain on a single line)
PASSWORD_COMPLEXITY_REGEX=^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{12,}$

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Rate limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=200 per day;50 per hour
RATELIMIT_STORAGE_URI=memory://
RATELIMIT_STRATEGY=fixed-window
LOGIN_RATE_LIMIT=5 per minute
SENSITIVE_RATE_LIMIT=20 per minute

# Pagination defaults
PAGINATION_DEFAULT_PAGE=1
PAGINATION_DEFAULT_PAGE_SIZE=20
PAGINATION_MAX_PAGE_SIZE=100
